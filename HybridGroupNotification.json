                                        },
                                        "method": "post",
                                        "path": "/v2/datasets/@{encodeURIComponent(encodeURIComponent('https://groupdeltastorageaccount.blob.core.windows.net/'))}/files",
                                        "queries": {
                                            "folderPath": "/deltacontainer",
                                            "name": "LastDeltaUrl",
                                            "queryParametersSingleEncoded": true
                                        }
                                    },
                                    "runtimeConfiguration": {
                                        "contentTransfer": {
                                            "transferMode": "Chunked"
                                        }
                                    }
                                },
                                "For_each": {
                                    "foreach": "@body('Parse_JSON')?['value']",
                                    "actions": {
                                        "Check_Group_Name": {
                                            "actions": {
                                                "For_Each_Member": {
                                                    "foreach": "@items('For_each')?['members@delta']",
                                                    "actions": {
                                                        "Condition_2": {
                                                            "actions": {
                                                                "Append_to_array_variable": {
                                                                    "runAfter": {},
                                                                    "type": "AppendToArrayVariable",
                                                                    "inputs": {
                                                                        "name": "RemovedUsers",
