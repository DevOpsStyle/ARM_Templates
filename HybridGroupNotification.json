                            "kind": "Http",
                            "inputs": {}
                        }
                    },
                    "actions": {
                        "AddedUsers": {
                            "runAfter": {
                                "DeltaMembers": [
                                    "Succeeded"
                                ]
                            },
                            "type": "InitializeVariable",
                            "inputs": {
                                "variables": [
                                    {
                                        "name": "AddedUsers",
                                        "type": "array"
                                    }
                                ]
                            }
                        },
                        "Condition": {
                            "actions": {
                                "Create_blob_(V2)": {
                                    "runAfter": {
                                        "For_each": [
                                            "Succeeded"
                                        ]
                                    },
                                    "type": "ApiConnection",
                                    "inputs": {
                                        "body": "@body('Parse_JSON')?['@odata.deltaLink']",
                                        "headers": {
                                            "ReadFileMetadataFromServer": true
                                        },
                                        "host": {
